{% extends 'base.html.twig' %}

{% block title %}Detail alea{% endblock %}

{% block body %}
    <div class="card">
        {% set labels = {
            'heat': 'Chaleur',
            'flood': 'Inondation',
            'drought_clay': 'Secheresse argiles',
            'cavites': 'Cavites souterraines'
        } %}
        <h1>Detail: {{ labels[hazard] ?? hazard }}</h1>
        {% if level == 'indisponible' %}
            <div class="pill">Donnee indisponible</div>
            <p class="muted">Cette donnee officielle n'est pas disponible pour le moment.</p>
        {% else %}
            <div class="score">{{ score }}/100</div>
            <div class="pill">Niveau: {{ level }}</div>
            <p class="muted">{{ explanation }}</p>
        {% endif %}
        <a class="cta" href="{{ path('audit_result', {id: audit.id}) }}">Retour au tableau de bord</a>
    </div>
{% endblock %}
